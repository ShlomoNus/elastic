{
    "compilerOptions": {
        "declaration": true,
        "target": "es2016",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "paths": {
            "@utils/*": ["src/utils/*"],
            "@routes/*": ["src/routes/*"],
            "@repository/*": ["src/repository/*"],
            "@models/*": ["src/models/*"],
            "@middleware/*": ["src/middleware/*"],
            "@handlers/*": ["src/handlers/*"],
            "@src/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*",
        "eslint.config.mjs",
        "jest.config.js",
        "jest.config.ts",
        "jest.setup.ts"
    ],
    "exclude": ["node_modules", "build"]
}
